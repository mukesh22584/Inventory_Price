<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Inventory" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/dodger_blue</item>
        <item name="colorPrimaryDark">@color/dodger_blue_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:statusBarColor">@color/dodger_blue</item>
        <item name="colorSurface">#121212</item>
        <item name="colorOnSurface">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>
    <style name="Theme.PersonalInventory" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="colorPrimary">@color/dodger_blue</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

	<style name="DialogTitleText" parent="TextAppearance.MaterialComponents.Subtitle1">
		<item name="android:textColor">@color/dodger_blue</item>
		<item name="android:textStyle">bold</item>
	</style>

    <style name="Theme.Inventory" parent="Base.Theme.Inventory" />
</resources>
