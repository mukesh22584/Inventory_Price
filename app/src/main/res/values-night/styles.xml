<resources>
    <style name="AppTheme" parent="Theme.Inventory">
        <item name="android:textColor">@color/primary_text_color</item>
    </style>

    <style name="PopupMenuTextStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textColor">@color/white</item>
        <item name="android:popupBackground">@color/black</item>
    </style>

    <style name="RadioDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SearchBarTheme" parent="MaterialSearchBarDark">
        <item name="mt_searchBarColor">#303030</item>
        <item name="mt_dividerColor">@android:color/transparent</item>
        <item name="mt_searchIconTint">@color/dodger_blue</item>
        <item name="mt_placeholderColor">@color/dodger_blue</item>
        <item name="mt_textCursorTint">@color/dodger_blue</item>
        <item name="mt_navIconEnabled">true</item>
    </style>

    <style name="RoundedDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_dialog_background</item>
    </style>

</resources>
